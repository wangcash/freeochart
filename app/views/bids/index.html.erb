<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Bid name</th>
      <th>Bid organ</th>
      <th>Bid amount</th>
      <th>Bid number</th>
      <th>Bid begin date</th>
      <th>Bid finish date</th>
      <th>City</th>
      <th>Products</th>
      <th>Bid content</th>
      <th>Bid link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.bid_name %></td>
        <td><%= bid.bid_organ_id %></td>
        <td><%= bid.bid_amount %></td>
        <td><%= bid.bid_number %></td>
        <td><%= bid.bid_begin_date %></td>
        <td><%= bid.bid_finish_date %></td>
        <td><%= bid.city_id %></td>
        <td><%= bid.products_id %></td>
        <td><%= bid.bid_content %></td>
        <td><%= bid.bid_link %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

